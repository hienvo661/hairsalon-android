<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.InfoProfileActivity">
    <androidx.appcompat.widget.Toolbar
        android:elevation="10dp"
        app:titleTextColor="@color/black"
        app:title="Chỉnh sửa tài khoản"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imguser"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_below="@id/imguser"
                    android:text="Thông tin của anh"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <View
                android:background="@color/primary"
                android:layout_width="match_parent"
                android:layout_height="0.02dp"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:text="họ và tên *"
                android:paddingLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/edtUsername"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:hint="Nhập tên người dùng ...."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:text="email *"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/edtEmail"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:hint="Nhập địa chỉ email...."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:text="Số điện thoại *"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:id="@+id/edtPhone"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/vietnam"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:gravity="center_vertical"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:text="Địa chỉ nhà *"
                android:paddingLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <EditText
                android:enabled="false"
                android:id="@+id/edtAddress"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:hint="Nhập địa chỉ nhà...."
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <Button
                android:id="@+id/btnUpdate"
                android:textSize="15sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:text="Cập nhật"
                android:background="@color/primary"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>