<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="18sp">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvDetailAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:ellipsize="end"
            android:fontFamily="@font/cera_pro_bold"
            android:maxLines="1"
            android:text="x xcx"
            android:textColor="@color/black_100"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/ivImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:ellipsize="end"
            android:fontFamily="@font/cera_pro_medim"
            android:maxLines="1"
            android:text="x xcx"
            android:textColor="@color/black_100"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/ivImage"
            app:layout_constraintTop_toBottomOf="@id/tvDetailAdd" />

        <TextView
            android:id="@+id/tvSdt"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="6dp"
            android:background="@drawable/border_4_white_stroke_fill"
            android:ellipsize="end"
            android:fontFamily="@font/cera_pro_medim"
            android:gravity="center"
            android:maxLines="1"
            android:text="Hotline"
            android:textColor="@color/black_100"
            android:textSize="18sp"
            app:layout_constraintEnd_toStartOf="@id/tvBook"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvAdd" />

        <TextView
            android:id="@+id/tvBook"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/border_4_yellow_fill"
            android:ellipsize="end"
            android:fontFamily="@font/cera_pro_medim"
            android:gravity="center"
            android:maxLines="1"
            android:paddingHorizontal="16dp"
            android:drawableEnd="@drawable/delete"
            android:text="XÃ³a "
            android:textColor="@color/red"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvSdt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="1dp"
            android:background="@color/noselect"
            app:layout_constraintTop_toBottomOf="@id/tvBook" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>