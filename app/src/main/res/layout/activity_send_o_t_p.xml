<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityOTP.SendOTPActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/image"
                android:src="@mipmap/send_otp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="130dp"
                android:layout_height="130dp"/>
            <TextView
                android:id="@+id/txtOTP"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:text="OTP Verification"
                android:layout_below="@id/image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt"
                android:textSize="14sp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:layout_below="@id/txtOTP"
                android:layout_centerHorizontal="true"
                android:text="We will send you anm One Time Password on this mobile number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtnumber"
                android:textSize="14sp"
                android:text="Enter Mobile Number"
                android:gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/linear"
                android:weightSum="10"
                android:layout_below="@id/txtnumber"
                android:layout_marginRight="60dp"
                android:layout_marginLeft="60dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <TextView
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="+84-"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/edtPhone"
                    android:gravity="center"
                    android:inputType="number"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:textColor="@color/black"
                    android:background="@null"
                    android:hint="123456789"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/linear2"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@id/linear"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"/>
            <FrameLayout
                android:layout_below="@id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnsendOTP"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:background="@drawable/layout_button_login"
                    android:textColor="@color/white"
                    android:text="Send OTP"
                    android:layout_margin="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <ProgressBar
                    android:visibility="gone"
                    android:indeterminateTint="@color/primary"
                    android:id="@+id/progress_circular"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </FrameLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>